{
  "name": "@peatti/prettier-config",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "check:lint": "eslint . --max-warnings 0",
    "check:types": "tsc --noEmit --pretty",
    "clean": "rm -rf .turbo dist",
    "dev": "tsdown --watch",
    "fix:lint": "eslint --fix ."
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "devDependencies": {
    "@peatti/eslint-config": "workspace:*",
    "@peatti/typescript-config": "workspace:*",
    "@types/node": "^24.7.0",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prettier-plugin-terraform-formatter": "^1.2.1",
    "tsdown": "^0.15.6"
  },
  "packageManager": "pnpm@10.18.1",
  "engines": {
    "node": "24.9.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
