{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "check:lint": {
      "dependsOn": ["^check:lint"]
    },
    "check:format": {
      "dependsOn": ["^check:format"]
    },
    "fix:lint": {
      "dependsOn": ["^fix:lint"]
    },
    "fix:format": {
      "dependsOn": ["^fix:format"]
    },
    "check:types": {
      "dependsOn": ["^check:types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
