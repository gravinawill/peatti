{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "check:lint": {
      "dependsOn": ["^check:lint"]
    },
    "check:format": {
      "dependsOn": ["^check:format"]
    },
    "fix:lint": {
      "dependsOn": ["^fix:lint"]
    },
    "fix:format": {
      "dependsOn": ["^fix:format"]
    },
    "check:types": {
      "dependsOn": ["^check:types"]
    },
    "check:updates": {
      "dependsOn": ["^check:updates"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "db:generate": {
      "dependsOn": ["^db:generate"]
    },
    "db:migrate": {
      "dependsOn": ["^db:migrate"]
    },
    "db:migrate:prod": {
      "dependsOn": ["^db:migrate:prod"]
    }
  }
}
