{
  "name": "@peatti/auth-server",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "check:lint": "eslint . --max-warnings 0",
    "check:types": "tsc --noEmit --pretty",
    "check:updates": "ncu -u && pnpm install",
    "clean": "rm -rf .turbo dist",
    "db:generate": "pnpm with-env prisma generate",
    "db:migrate": "pnpm with-env prisma migrate dev",
    "db:migrate:prod": "pnpm with-env prisma migrate deploy",
    "dev": "pnpm with-env tsx watch src/server.ts",
    "fix:lint": "eslint --fix .",
    "with-env": "dotenvx run -f ../../.env --"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@hono/zod-openapi": "^1.1.3",
    "@peatti/crypto": "workspace:*",
    "@peatti/domain": "workspace:*",
    "@peatti/env": "workspace:*",
    "@peatti/logger": "workspace:*",
    "@peatti/utils": "workspace:*",
    "@prisma/client": "^6.16.3",
    "@scalar/hono-api-reference": "^0.9.20",
    "hono": "^4.9.10"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.0",
    "@peatti/eslint-config": "workspace:*",
    "@peatti/typescript-config": "workspace:*",
    "@types/node": "^24.7.0",
    "npm-check-updates": "^19.0.0",
    "prisma": "^6.16.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
